<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.wallet.walletManagement.repository.TrasactionRepository">

    <resultMap id="TransactionResultMap" type="com.wallet.walletManagement.model.Transcation">
        <id property="id" column="id"/>
        <result property="accountId" column="account_id"/>
        <result property="type" column="type"/>
        <result property="amount" column="amount"/>
        <result property="category" column="category"/>
        <result property="memo" column="memo"/>
        <result property="date" column="date"/>
    </resultMap>

    <select id="findAll" resultMap="TransactionResultMap">
        SELECT * FROM transactions
    </select>

    <select id="findById" parameterType="long" resultMap="TransactionResultMap">
        SELECT * FROM transactions WHERE id = #{id}
    </select>

    <select id="findByAccountId" parameterType="long" resultMap="TransactionResultMap">
        SELECT * FROM transactions WHERE account_id = #{accountId}
    </select>

    <select id="findByDateRange" resultMap="TransactionResultMap">
        SELECT * FROM transactions
        WHERE date BETWEEN #{start} AND #{end}
    </select>

    <insert id="insert" parameterType="com.wallet.walletManagement.model.Transcation">
        INSERT INTO transactions(account_id, type, amount, category, memo, date)
        VALUES (#{accountId}, #{type}, #{amount}, #{category}, #{memo}, #{date})
    </insert>

    <update id="update" parameterType="com.wallet.walletManagement.model.Transcation">
        UPDATE transactions
        SET type=#{type}, amount=#{amount}, category=#{category}, memo=#{memo}, date=#{date}
        WHERE id=#{id}
    </update>

    <delete id="delete" parameterType="long">
        DELETE FROM transactions WHERE id=#{id}
    </delete>

</mapper>
